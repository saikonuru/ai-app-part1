{
  "version": 2,
  "builds": [
    {"src": "packages/server/index.ts", "use": "@vercel/node"},
    {"src": "packages/client/package.json", "use": "@vercel/static-build", "config": {"distDir": "dist"}}
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "packages/server/index.ts"},
    {"src": "/(.*)", "dest": "packages/client/dist/$1"}
  ]
}
